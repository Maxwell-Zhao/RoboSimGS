<robot name="articulated_object">

  <link name="body">
    <visual>
      <geometry>
        <mesh filename="body_centered.glb" scale="1 1 1"/>
      </geometry>
      <material name="body_material">
        <color rgba="0.8 0.6 0.4 1.0"/>
